<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="标题"
        android:textColor="#000"
        android:id="@+id/home_tv_item3"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/linear_item3"
        android:layout_below="@+id/home_tv_item3"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_weight="1"
        android:id="@+id/home_iv_item3_1"
        android:layout_width="120sp"
        android:layout_height="100sp" />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/home_iv_item3_2"
            android:layout_width="120sp"
            android:layout_height="100sp" />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/home_iv_item3_3"
            android:layout_width="120sp"
            android:layout_height="100sp" />
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="5sp"
        android:layout_below="@+id/linear_item3"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_tv3_1"
            android:text="海外网"
            android:textSize="15sp"
            android:layout_marginLeft="5sp"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_tv3_2"
            android:text="评论"
            android:textSize="15sp"
            android:layout_marginLeft="1sp"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_tv3_3"
            android:text="10分钟前"
            android:textSize="15sp"
            android:layout_marginLeft="1sp"
            android:layout_width="0sp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
