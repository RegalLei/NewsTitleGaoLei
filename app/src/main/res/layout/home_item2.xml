<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="标题"
        android:textColor="#000"
        android:id="@+id/home_tv_item2"
        android:textSize="22sp"
        android:layout_toLeftOf="@+id/home_iv_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/home_iv_item2"
        android:layout_alignParentRight="true"
        android:layout_width="120sp"
        android:layout_height="100sp" />
    <LinearLayout
        android:layout_marginTop="5sp"
        android:layout_below="@+id/home_tv_item2"
        android:layout_toLeftOf="@+id/home_iv_item2"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_tv2_1"
            android:text="海外网"
            android:textSize="15sp"
            android:layout_marginLeft="5sp"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_tv2_2"
            android:text="评论"
            android:textSize="15sp"
            android:layout_marginLeft="5sp"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_tv2_3"
            android:text="10分钟前"
            android:textSize="15sp"
            android:layout_marginLeft="6sp"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
