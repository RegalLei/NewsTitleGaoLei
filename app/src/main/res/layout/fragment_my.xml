<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="#404040"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="200sp">

        <LinearLayout
            android:layout_marginTop="50sp"
            android:layout_width="match_parent"
            android:layout_height="100sp">

        <ImageView
            android:layout_marginLeft="15sp"
            android:src="@drawable/cellphoneicon_login_profile_press"
            android:layout_width="100sp"
            android:layout_height="100sp" />
            <ImageView
                android:layout_marginLeft="15sp"
                android:src="@drawable/weixinicon_login_profile_press"
                android:layout_width="100sp"
                android:layout_height="100sp" />
            <ImageView
                android:layout_marginLeft="15sp"
                android:src="@drawable/qqicon_login_profile_press"
                android:layout_width="100sp"
                android:layout_height="100sp" />
            <ImageView
                android:layout_marginRight="15sp"
                android:layout_marginLeft="10sp"
                android:src="@drawable/right_arrow_topic_pressed"
                android:layout_width="30sp"
                android:layout_height="100sp" />
        </LinearLayout>
        <TextView
            android:textColor="#bfbfbf"
            android:gravity="center"
            android:text="登陆推荐更精准"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="80sp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_my_shouc"
                android:textSize="12sp"
                android:text="收藏"
                android:drawableTop="@drawable/favoriteicon_profile"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <Button
                android:textColor="#000000"
                android:background="#ffffff"
                android:text="历史"
                android:textSize="12sp"
                android:drawableTop="@drawable/refreshing_video_textpage_normal"
                android:id="@+id/btn_my_lisi"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <Button
                android:textColor="#000000"
                android:background="#ffffff"
                android:text="夜间"
                android:textSize="12sp"
                android:drawableTop="@drawable/nighticon_profile"
                android:id="@+id/btn_my_yejian"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <TextView
           android:gravity="center_vertical"
           android:text="消息通知"
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="30sp" />
        <TextView
            android:gravity="center_vertical"
            android:text="头条商城"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
        <TextView
            android:gravity="center_vertical"
            android:text="京东特供"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
        <TextView
            android:gravity="center_vertical"
            android:text="我要爆料"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
        <TextView
            android:gravity="center_vertical"
            android:text="用户反馈"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
        <TextView
            android:gravity="center_vertical"
            android:text="系统设置"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="30sp" />
    </LinearLayout>
</LinearLayout>
