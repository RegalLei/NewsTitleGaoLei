<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_daynight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gl.newtitlegaolei.MainActivity">

        <FrameLayout
            android:id="@+id/frag_main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:id="@+id/ll_main_layout"
            android:layout_width="match_parent"
            android:layout_height="51sp">

            <LinearLayout
                android:weightSum="4"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0sp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_main_home"
                        android:textSize="12sp"
                        android:text="首页"
                        android:drawableTop="@drawable/mian_home_photo"
                        android:textColor="#000"
                        android:background="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <Button
                        android:textColor="#000000"
                        android:background="#ffffff"
                        android:text="视频"
                        android:textSize="12sp"
                        android:drawableTop="@drawable/mian_video_photo"
                        android:id="@+id/btn_main_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <Button
                        android:textColor="#000000"
                        android:background="#ffffff"
                        android:text="关注"
                        android:textSize="12sp"
                        android:drawableTop="@drawable/mian_attention_photo"
                        android:id="@+id/btn_main_attention"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <Button
                        android:textColor="#000000"
                        android:background="#ffffff"
                        android:text="我的"
                        android:textSize="12sp"
                        android:drawableTop="@drawable/mian_my_photo"
                        android:id="@+id/btn_main_my"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
