<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51sp">
            <ImageView
                android:id="@+id/videotitle_photo"
                android:layout_alignParentRight="true"
                android:src="@drawable/searchicon_titlebar_location_normal"
                android:layout_width="40sp"
                android:layout_height="50sp"
                />
            <android.support.design.widget.TabLayout
                android:layout_toLeftOf="@id/videotitle_photo"
                android:id="@+id/video_tablayout"
                app:tabGravity="fill"
                app:tabSelectedTextColor="#ff00"
                app:tabTextColor="#000"
                android:layout_width="match_parent"
                android:layout_height="51sp">
            </android.support.design.widget.TabLayout>
        </RelativeLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/video_vpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>
